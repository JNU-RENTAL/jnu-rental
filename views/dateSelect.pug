extends layout

block style
    link(rel='stylesheet' href='/css/main.css')
    link(rel='stylesheet' href='/css/reservation.css')
block content
    body
        .user_logo
            img(src='/profile.png' alt='manual')
        main
            .reser_text
                p #{place}
            .btns
                -for (let i = 1; i <= 7; i++)
                    .date_btn
                        button
                            a(href=`/reservation/${place}/${('0' + (new Date().getMonth() + 1)).slice((-2))}${('0' + (new Date().getDate() + i)).slice((-2))}`) #{new Date().getMonth() + 1 + '월 ' + (new Date().getDate() + i) + '일'}