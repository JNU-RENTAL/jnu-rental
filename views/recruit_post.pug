extends layout 

block style
    link(rel="stylesheet", href="/css/Reset.css")
    link(rel="stylesheet", href="/css/recruit.css")
    link(rel="stylesheet", href="/css/recruit_post.css")
block content
  body
    .user_logo
      img(src="/profile.png", alt="manual")
    .recruit
      div
        nav
          ul
            li
              a(href="#") 전체
            li
              a(href="#") 대운동장
            li
              a(href="#") 야외 농구장
            li
              a(href="#") 야외 족구장1
            li
              a(href="#") 야외 족구장2
            li
              a(href="#") 체육관내 농구장
      main
        div

          section
            .writer
              .writer_logo
                img(src="/profile.png", alt="manual")
              .writer_info
                p #{post.user_id}
                p #{new Date(post.createdAt).toLocaleString('ko-KR', {month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit'})}
            h2 #{post.title}
            p #{post.text}
            p
              a(href="#") 댓글 (0)
          section.comment
            .commenter
              .commenter_logo
                img(src="/profile.png", alt="manual")
              .commenter_info
                p 사용자 이름
            p 댓글이라 아무거나 적어요
            .subContents
              p 2023-04-22
          section.comment
            .commenter
              .commenter_logo
                img(src="/profile.png", alt="manual")
              .commenter_info
                p 사용자 이름
            p 댓글이라 아무거나 적어요
            .subContents
              p 2023-04-22
          .comment_write
            input(type="text", placeholder="댓글 달기")
            button(type="submit")
              .message_logo
                img(src="/email.png", alt="message")